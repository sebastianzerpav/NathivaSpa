@model AppWebSpa.Data.Entities.NathivaRole

@{
    ViewData["Title"] = "Editar Rol";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <style>
        body {
            background: linear-gradient(135deg, #d1e18a, #eaf3c7);
            color: #333;
            margin: 0;
            font-family: 'Helvetica Neue', sans-serif;
            padding: 20px;
        }

        .container-all {
            margin-top: 4rem;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .container-general {
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 500px;
            padding: 1.5rem;
            border-radius: 8px;
            background: rgba(255, 255, 255, 0.9);
        }

        .container-title {
            text-align: center;
            margin-bottom: 1.5rem;
        }

        h3 {
            font-weight: 700;
            color: #333;
        }

        .container-form {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        label {
            font-weight: 700;
        }

        input, select {
            display: block;
            width: 100%;
            padding: .375rem .75rem;
            font-size: 1rem;
            font-weight: 400;
            line-height: 1.5;
            color: #212529;
            background-color: #fff;
            border: 1px solid #ced4da;
            border-radius: .25rem;
            transition: border-color .15s ease-in-out, box-shadow .15s ease-in-out;
        }

            input:focus, select:focus {
                border-color: #d1e18a;
                box-shadow: 0 0 0 0.2rem rgba(209, 225, 138, 0.25);
            }

        .container-button {
            margin-top: 2rem;
            display: flex;
            justify-content: center;
            margin-bottom: 1rem;
        }

        .btn-primary {
            background: linear-gradient(135deg, #b0c876, #d1e18a);
            color: #333;
            font-size: 16px;
            border: none;
            border-radius: 5px;
            padding: 12px 24px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
            transition: background 0.3s, transform 0.3s ease, box-shadow 0.3s ease;
            font-weight: bold;
            cursor: pointer;
        }

            .btn-primary:hover {
                background: linear-gradient(135deg, #a0b76e, #c0d478);
                transform: scale(1.05);
                box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
            }

        .link-view-users {
            text-align: center;
            margin-top: 1rem;
            display: block;
            color: #fff;
            text-decoration: none;
            font-weight: bold;
            background: linear-gradient(135deg, #2196F3, #1E88E5);
            padding: 12px 24px;
            border-radius: 5px;
            transition: background 0.3s, transform 0.3s ease, box-shadow 0.3s ease;
        }

            .link-view-users:hover {
                background: linear-gradient(135deg, #1976D2, #1565C0);
                transform: scale(1.05);
                text-decoration: none;
            }

    </style>
</head>

<body>
    <div class="container-all">
        <div class="container-general">
            <div class="container-title">
                <h3>Editar rol</h3>
            </div>
            <div class="container-form">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="form-group">
                        <label asp-for="Name" class="control-label">Nombre</label>
                        <input asp-for="Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="State" class="control-label">Estado</label>
                        <select asp-for="State" class="form-control">
                            <option value="0">Cerrado</option>
                            <option value="1">Abierto</option>
                        </select>
                        <span asp-validation-for="State" class="text-danger"></span>
                    </div>

                    <div class="container-button">
                        <input type="submit" value="Guardar cambios" class="btn btn-primary" />
                    </div>
                    <div style="text-align:center; margin-top:1rem;">
                        <a asp-action="Index" class="link-view-users">Ver todos los roles</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
