@model AppWebSpa.Models.AssignRoleViewModel

@{
    ViewData["Title"] = "Asignar Rol";
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            background: linear-gradient(135deg, #d1e18a, #eaf3c7);
            color: #333;
            margin: 0;
            font-family: 'Helvetica Neue', sans-serif;
            padding: 20px;
        }

        .container-all {
            margin-top: 4rem;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .container-general {
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 600px;
            padding: 1.5rem;
            border-radius: 8px;
            background: rgba(255, 255, 255, 0.9);
        }

        .container-title {
            text-align: center;
            margin-bottom: 1.5rem;
        }

            .container-title h3 {
                font-size: 1.75rem;
                font-weight: 700;
            }

        .container-form {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        label {
            font-weight: 700;
        }

        select,
        button {
            display: block;
            width: 100%;
            padding: .375rem .75rem;
            font-size: 1rem;
            font-weight: 400;
            line-height: 1.5;
            color: #212529;
            background-color: #fff;
            border: 1px solid #ced4da;
            border-radius: .25rem;
            transition: border-color .15s ease-in-out, box-shadow .15s ease-in-out;
        }

            select:focus,
            button:focus {
                border-color: #d1e18a;
                box-shadow: 0 0 0 0.2rem rgba(209, 225, 138, 0.25);
            }

        .container-button {
            margin-top: 2rem;
            display: flex;
            justify-content: center;
        }

        .btn-primary {
            background: linear-gradient(135deg, #b0c876, #d1e18a);
            color: #333;
            font-size: 16px;
            border: none;
            border-radius: 5px;
            padding: 12px 24px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
            transition: background 0.3s, transform 0.3s ease, box-shadow 0.3s ease;
            text-align: center;
            font-weight: bold;
            cursor: pointer;
        }

            .btn-primary:hover {
                background: linear-gradient(135deg, #a0b76e, #c0d478);
                transform: scale(1.05);
                box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
            }
    </style>
</head>

<body>
    <div class="container-all">
        <div class="container-general">
            <div class="container-title">
                <h3>Asignar Rol a Usuario</h3>
            </div>
            <div class="container-form">
                <form asp-action="AssignRole" method="post">
                    <div class="form-group">
                        <label for="User">Seleccione Usuario:</label>
                        <select id="User" name="UserId" class="form-control">
                            @foreach (var user in Model.Users)
                            {
                                <option value="@user.IdUser">@user.Name</option>
                            }
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="Role">Seleccione Rol:</label>
                        <select id="Role" name="RoleId" class="form-control">
                            @foreach (var role in Model.Roles)
                            {
                                <option value="@role.IdRol">@role.Name</option>
                            }
                        </select>
                    </div>

                    <div class="container-button">
                        <button type="submit" class="btn-primary">Asignar Rol</button>
                    </div>
                    <div style="text-align:center; margin-top:1rem;">
                        <a asp-action="Index" class="link-view-users">Ver todos los roles</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

</html>
