@model SpaService

@{
    ViewData["Title"] = "Edit";
}

<style>
    body {
        /* background: linear-gradient(135deg, #d1e18a, #eaf3c7); /* Degradado de fondo * *//
        color: #333;
        margin: 0;
        font-family: 'Helvetica Neue', sans-serif; /* Fuente moderna */
        padding: 20px; /* Espaciado alrededor */
    }

    .container-all {
        margin-top: 4rem;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .container-general {
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1); /* Sombra más pronunciada */
        width: 100%; /* Cambiado a 100% para más flexibilidad */
        max-width: 500px; /* Ancho máximo para mantener el diseño */
        padding: 1.5rem; /* Aumentado el padding */
        border-radius: 8px;
        background: rgba(255, 255, 255, 0.9); /* Fondo blanco semi-transparente */
    }

    .container-title {
        text-align: center;
        margin-bottom: 1.5rem;
    }

    h3 {
        font-weight: 700;
        color: #333; /* Color del título */
    }

    .container-form {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    label {
        font-weight: 700;
    }

    input {
        display: block;
        width: 100%; /* Cambiado a 100% para adaptarse al contenedor */
        padding: .375rem .75rem;
        font-size: 1rem;
        font-weight: 400;
        line-height: 1.5;
        color: #212529;
        background-color: #fff;
        border: 1px solid #ced4da;
        border-radius: .25rem;
        transition: border-color .15s ease-in-out, box-shadow .15s ease-in-out;
    }

        input:focus {
            border-color: #d1e18a; /* Color del borde al enfocar */
            box-shadow: 0 0 0 0.2rem rgba(209, 225, 138, 0.25); /* Sombra al enfocar */
        }

    .container-button {
        margin-top: 2rem;
        display: flex;
        justify-content: center;
        gap: 1rem;
    }

    .btn-primary {
        background: linear-gradient(135deg, #b0c876, #d1e18a);
        color: #333;
        font-size: 16px;
        border: none;
        border-radius: 5px;
        padding: 12px 24px; /* Padding aumentado */
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
        transition: background 0.3s, transform 0.3s ease, box-shadow 0.3s ease;
        text-align: center;
        text-decoration: none; /* Sin subrayado */
        font-weight: bold; /* Texto en negrita */
        cursor: pointer; /* Cambiar cursor a pointer */
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #a0b76e, #c0d478);
            transform: scale(1.05);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2); /* Sombra más intensa al pasar el ratón */
        }

    .link-view-users {
        text-align: center;
        margin-top: 1rem;
        display: block; /* Asegura que esté centrado */
        color: #fff; /* Color del texto */
        text-decoration: none; /* Sin subrayado */
        font-weight: bold; /* Texto en negrita */
        background: linear-gradient(135deg, #2196F3, #1E88E5); /* Degradado azul */
        padding: 12px 24px; /* Padding aumentado */
        border-radius: 5px; /* Bordes redondeados */
        transition: background 0.3s, transform 0.3s ease, box-shadow 0.3s ease; /* Transiciones suaves */
    }

        .link-view-users:hover {
            background: linear-gradient(135deg, #1976D2, #1565C0); /* Color al pasar el ratón */
            transform: scale(1.05); /* Efecto de aumento al pasar el ratón */
            text-decoration: none; /* Mantener sin subrayado */
        }
</style>

<div class="pagetitle">
    <h1>Servicios</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Inicio</a></li>
            <li class="breadcrumb-item"><a asp-controller="SpaServices" asp-action="Index">Servicios</a></li>
            <li class="breadcrumb-item active">Editar Servicio</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="spaService dashboard">

    <div class="card">
        <div class="card-body">
            
            <h3 class="card-title" text-primary>Editar servicio</h3>
                      
            <form  class="row g-3" asp-action="Edit" method="POST">
                
                <input type="hidden" asp-for="IdSpaService" />
               
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Nombre del servicio</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label">Descripción</label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label">Precio</label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                @* <div class="form-group">
                    <label asp-for="RegistrationDateTime" class="control-label">Fecha de registro</label>
                    <input asp-for="RegistrationDateTime" class="form-control" />
                    <span asp-validation-for="RegistrationDateTime" class="text-danger"></span>
                </div> *@
                <div class="container-button">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a asp-action="Index" class="btn btn-secondary">Volver</a>
                </div>
            </form>
            
                  
        
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
